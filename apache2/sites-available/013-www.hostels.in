NameVirtualHost 95.142.170.11:80

<VirtualHost 95.142.170.11:80>
        ServerName      www.hostels.in
        ServerAlias     www.hostels.in
        ServerAlias     hostels.in
        ServerAdmin     technical@mcwebmanagement.com

        DocumentRoot "/opt/web"
        <Directory "/opt/web">
                Options Indexes FollowSymLinks MultiViews
                AllowOverride All
                Order allow,deny
                Allow from all
        </Directory>

        CustomLog /opt/logs/hostels.in-access.log combined
        ErrorLog /opt/logs/hostels.in-error.log
        LogLevel warn    

</VirtualHost>

NameVirtualHost 95.142.170.11:443

<VirtualHost 95.142.170.11:443>

        ServerName      www.hostels.in
        ServerAlias     www.hostels.in
        ServerAlias     hostels.in
        ServerAdmin     technical@mcwebmanagement.com

        DocumentRoot "/opt/web"
        <Directory "/opt/web">
                Options Indexes FollowSymLinks MultiViews
                AllowOverride All
                Order allow,deny
                Allow from all
        </Directory>

        CustomLog /opt/logs/hostels.in-access.log combined
        ErrorLog /opt/logs/hostels.in-error.log
        LogLevel warn

	SSLEngine on

    	SSLCertificateFile      /opt/certificates/hostels.in.crt
    	SSLCACertificateFile    /opt/certificates/hostels.in.pem
    	SSLCertificateKeyFile   /opt/certificates/hostels.in.key

</VirtualHost>

